# Train với dataset local (nhanh hơn 2-3 lần)
from ultralytics import YOLO
YOLO('yolov8s.pt').train(
    data='/content/vehicle_dataset/data.yaml',
    epochs=200,
    imgsz=640,
    batch=32,
    name='vehicle_yolov8s_9k',
    device=0,
    cache='ram',
    workers=8,
    amp=True,
    save_period=10
)

